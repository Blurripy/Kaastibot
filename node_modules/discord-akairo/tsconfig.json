{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esNext",
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol",
			"DOM"
